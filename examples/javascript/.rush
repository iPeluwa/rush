tasks:
  install:
    cmd: echo "ğŸ“¦ Installing dependencies (npm install)"
    description: "Install project dependencies"
    cache: [package.json, package-lock.json]
    
  lint:
    cmd: echo "ğŸ” Linting code (eslint src/)"
    description: "Run ESLint on source files"
    deps: [install]
    
  test:
    cmd: echo "ğŸ§ª Running tests (jest)"
    description: "Run unit tests with Jest"
    deps: [install]
    
  build:
    cmd: echo "ğŸ—ï¸ Building project (webpack)"
    description: "Build production bundle"
    deps: [install]
    cache: [src/, package.json, webpack.config.js]
    
  typecheck:
    cmd: echo "ğŸ” Type checking (tsc --noEmit)"
    description: "TypeScript type checking"
    deps: [install]
    
  dev:
    cmd: echo "ğŸš€ Starting dev server on http://localhost:3000"
    description: "Start development server"
    deps: [install]
    
  ci:
    cmd: echo "âœ… All CI checks passed!"
    description: "Run complete CI pipeline"
    deps: [test, lint, typecheck, build]
    
  deploy:
    cmd: echo "ğŸš€ Deploying to ${DEPLOY_ENV:-staging}..."
    description: "Deploy application"
    deps: [ci]
    env:
      NODE_ENV: "production"
      DEPLOY_ENV: "${DEPLOY_ENV:-staging}"
